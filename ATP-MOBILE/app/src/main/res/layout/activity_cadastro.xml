<!-- activity_cadastro.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Campos de formulário -->
    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"/>

    <Spinner
        android:id="@+id/spinnerBairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro"
        android:layout_below="@id/editTextNome"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"/>

    <EditText
        android:id="@+id/editTextRua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua"
        android:layout_below="@id/spinnerBairro"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- Botões -->
    <Button
        android:id="@+id/buttonRetornar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retornar para a Tela Inicial"
        android:layout_below="@id/editTextRua"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonPontosColeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir para a Tela de Pontos de Coleta"
        android:layout_below="@id/buttonRetornar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonDiaTurnoColeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir para a Tela de Dia e Turno da Coleta"
        android:layout_below="@id/buttonPontosColeta"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
